@{
    ViewData["Title"] = "Home";
}

<style>
    .home-tile {
        transition: transform 0.2s;
        cursor: pointer;
        text-align: center;
        padding: 20px;
        background-color: #f5f5f5;
        border: 1px solid #ccc;
        width: calc(33.33% - 20px); /* Set the width for each tile */
        margin: 10px; /* Add a small margin between tiles */
    }

        .home-tile img {
            max-width: 100%; /* Ensure the image fills the width of the tile */
            max-height: 100%; /* Ensure the image fills the height of the tile */
        }

        .home-tile:hover {
            transform: scale(1.05);
        }

    .tile-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }
</style>

